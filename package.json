{
  "name": "progresso",
  "version": "2.0.0",
  "description": "A progress tracking and calendar app",
  "main": "main.js",
  "homepage": "https://progressoelectron.com",
  "scripts": {
    "start": "electron .",
    "dist:linux": "electron-builder --linux"
  },
  "author": "Abel M Punnoose <abel.punnoose.cosmic@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^26.2.0"
  },
  "build": {
    "appId": "com.cosmic.progresso",
    "productName": "Progresso",
    "linux": {
      "target": [
        {
          "target": "pacman",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/icons/icon256.png",
      "maintainer": "Abel M Punnoose <abel.punnoose.cosmic@gmail.com>"
    },
    "pacman": {
      "depends": [
        "gtk3",
        "libnotify",
        "nss"
      ]
    }
  },
  "dependencies": {
    "electron-store": "^10.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zeta-Chrome/progresso.git"
  },
  "bugs": {
    "url": "https://github.com/Zeta-Chrome/progresso/issues"
  }
}
